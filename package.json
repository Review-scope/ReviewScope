{
  "name": "reviewscope",
  "version": "0.0.1",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build:packages": "npm run build -w @reviewscope/llm-core && npm run build -w @reviewscope/rules-engine && npm run build -w @reviewscope/security && npm run build -w @reviewscope/context-engine",
    "build:apps": "npm run build -w @reviewscope/api && npm run build -w @reviewscope/worker && npm run build -w @reviewscope/dashboard",
    "build": "npm run build:packages && npm run build:apps",
    "build:api-only": "npm run build:packages && npm run build -w @reviewscope/api && npm run build -w @reviewscope/worker",
    "dev": "npm run dev --workspaces --if-present",
    "dev:api": "npm run dev -w @reviewscope/api",
    "dev:worker": "npm run dev -w @reviewscope/worker",
    "dev:dashboard": "npm run dev -w @reviewscope/dashboard",
    "start": "npm run start --workspaces --if-present",
    "start:api": "npm run start -w @reviewscope/api",
    "start:worker": "npm run start -w @reviewscope/worker",
    "start:dashboard": "npm run start -w @reviewscope/dashboard",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write .",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc -b",
    "db:generate": "npm run db:generate -w @reviewscope/api",
    "db:migrate": "npm run db:migrate -w @reviewscope/api",
    "db:push": "npm run db:push -w @reviewscope/api",
    "db:studio": "npm run db:studio -w @reviewscope/api",
    "db:drop": "npm run db:drop -w @reviewscope/api"
  },
  "devDependencies": {
    "@types/babel__traverse": "^7.28.0",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "prettier": "^3.2.0",
    "typescript": "^5.3.0",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "overrides": {
    "react": "19.2.3",
    "react-dom": "19.2.3"
  },
  "dependencies": {
    "@babel/parser": "^7.28.6",
    "@babel/traverse": "^7.28.6",
    "@qdrant/js-client-rest": "^1.16.2",
    "tree-sitter-c": "^0.24.1",
    "tree-sitter-cpp": "^0.23.4",
    "tree-sitter-go": "^0.25.0",
    "tree-sitter-java": "^0.23.5",
    "tree-sitter-python": "^0.25.0",
    "web-tree-sitter": "^0.26.3"
  }
}
